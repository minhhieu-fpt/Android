<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/nentab"
        android:gravity="center"
        android:text="Thêm"
        android:textColor="#fff"
        android:textSize="36sp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edtDialogAddTenKhoanThu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:hint="Nhập Tên " />
    <EditText
        android:id="@+id/edtDialogSoTien"
        android:layout_width="match_parent"
        android:background="@drawable/text"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:hint="So tien " />
    <EditText
        android:id="@+id/edtDialogNgayNhap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/text"
        android:layout_marginTop="40dp"
        android:hint="dd/mm/yyyy " />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="240dp"
            android:src="@drawable/date"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDialogKhoanThuAdd"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/botron"
            android:text="Thêm" />

        <Button
            android:id="@+id/btnDialogKhoanThuThoat"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/botron"
            android:text="Thoát" />
    </LinearLayout>


</LinearLayout>