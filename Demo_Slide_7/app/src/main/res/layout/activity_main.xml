<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edt_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_SAVETOCACHE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE TO CACHE"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/btn_LOADFORMCACHE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOAD FORM CACHE"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_SAVEINTERNAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE INTERNAL"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/btn_LOADINTERNAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOAD INTERNAL"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_SAVEEXTERNAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE EXTERNAL"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/btn_LOADEXTERNAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOAD EXTERNAL"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_SAVESHAREPREF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE SHAREPREF"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/btn_LOADSHAREPREF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOAD SHAREPREF"/>
    </LinearLayout>

    </LinearLayout>