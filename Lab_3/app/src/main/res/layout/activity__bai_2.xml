<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Bai_2">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_sht1"
        android:hint="Nhập a"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_sht2"
        android:hint="Nhập b"
        android:layout_below="@id/edt_sht1"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_sht3"
        android:hint="Nhập c"
        android:layout_below="@id/edt_sht2"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_tinh"
        android:layout_below="@id/edt_sht3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Tính"
        android:onClick="tinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>