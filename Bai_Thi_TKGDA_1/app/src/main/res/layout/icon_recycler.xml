<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_user"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="65dp">
<LinearLayout
    android:layout_width="370dp"
    android:layout_height="65dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Username :"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Password :"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/username_recyclerview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/password_recyclerview"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/sua_recyclerview"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/baseline_create_black_18dp"/>

    <ImageView
        android:id="@+id/xoa_recyclerview"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/baseline_delete_forever_black_18dp"/>

</LinearLayout>
</androidx.cardview.widget.CardView>
