<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="348dp"
        android:layout_height="46dp"
        android:layout_marginTop="36dp"
        android:text="Tìm Bội Chung Nhỏ Nhất"
        android:textColor="#DD1616"
        android:layout_marginLeft="35dp"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_soThuNhat"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="Nhập số thứ nhất"
        android:inputType="textPersonName"
        android:textColor="#232121" />

    <EditText
        android:id="@+id/edit_soThuHai"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:hint="Nhập số thứ hai"
        android:inputType="textPersonName"
        android:textColor="#232121" />

    <Button
        android:id="@+id/btn_BoiChung"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="400dp"
        android:text="BCNN"
        android:onClick="BCNN"
        android:textColor="#0033FF"
        android:textSize="24sp" />

</RelativeLayout>